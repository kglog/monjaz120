// Incidents/logs for moderation attempts (forbidden contact info, links, etc.)
model Incident {
  id        String   @id @default(cuid())
  userId    String?
  type      String   // e.g., "forbidden_contact" | "spam"
  payload   Json?
  message   String?
  createdAt DateTime @default(now())

