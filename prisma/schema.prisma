}

// Requests table: users ask for services and sellers can claim them
model Request {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdBy   String?
  status      String   @default("open") // open / claimed / closed
  claimedBy   String?
  price       Int?     // stored in halalas (e.g., 1000 = 10.00 SAR)
  platformFee Int      @default(1000)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

