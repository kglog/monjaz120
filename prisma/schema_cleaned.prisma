generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // متوافق مع DATABASE_URL الحالي
  url      = env("DATABASE_URL")
}

// قاعدة بيانات بوستجري (إضافة فقط)
